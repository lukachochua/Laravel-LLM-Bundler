{
  "name": "laravel-code-bundler",
  "displayName": "Laravel Code Bundler",
  "description": "Bundles Laravel code with configurable paths",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:laravel-bundler.bundle",
    "onCommand:laravel-bundler.configure"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Laravel Code Bundler",
      "properties": {
        "laravelBundler.includedPaths": {
          "type": "array",
          "default": [
            "app/Http/Controllers/",
            "app/Services/",
            "app/Models/",
            "app/Repositories/",
            "app/Actions/"
          ],
          "description": "Paths to include in code bundle"
        }
      }
    },
    "commands": [
      {
        "command": "laravel-bundler.bundle",
        "title": "Bundle Laravel Code for LLM"
      },
      {
        "command": "laravel-bundler.configure",
        "title": "Configure Bundle Paths"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}